---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from './BaseLayout.astro'

type Props = CollectionEntry<'exhibit'>['data']

const { title, description, headImage } = Astro.props
---

<BaseLayout title={title} description={description}>
  <article>
    <div class="title">
      {headImage && <img src={headImage} alt="" />}
      <h1>{title}</h1>
      <p>{description}</p>
    </div>
    <slot />
  </article>
</BaseLayout>
